{
  "manifest_version": 3,
  "name": "LeafByte",
  "version": "1.0.0",
  "description": "Track and reduce your web browsing carbon footprint with real-time emission monitoring and smart insights.",
  "author": "Labib Bin Shahed",
  
  "permissions": [
    "storage",
    "history",
    "tabs",
    "activeTab",
    "alarms",
    "notifications",
    "declarativeNetRequest",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeafByte - Carbon Footprint Tracker",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "assets/*", "chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}